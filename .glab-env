#!/bin/bash
# Source this file to authenticate glab for globtimplots project
# Usage: source .glab-env

# Source the gitlab environment file
if [ -f .env.gitlab.local ]; then
    source .env.gitlab.local
    # Map GITLAB_PRIVATE_TOKEN to GITLAB_TOKEN for glab CLI
    export GITLAB_TOKEN="${GITLAB_PRIVATE_TOKEN}"
    echo "âœ“ GITLAB_TOKEN set for globtimplots (project 2854)"
    echo "  Run glab commands normally from this directory"
else
    echo "ERROR: .env.gitlab.local not found"
    echo "Copy .env.gitlab.local.template and configure it first"
    return 1
fi
